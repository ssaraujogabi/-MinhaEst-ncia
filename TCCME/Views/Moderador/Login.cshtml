@model TCCME.Models.Usuario
@{
    ViewBag.Title = "Login";
}

    <div class="col-md-6 col-md-offset-3 text-center">
        <div class="jumbotron">
            <form method="post" id="form-login">
                <div class="row">
                    <h2>Administrativo</h2>
                    <p class="text-muted"><i class="fa fa-lock"></i> Autenticação</p>
                    <div class="form-group">
                        <br />
                        <label>Login</label>
                        <input type="text" name="login" id="login" class="form-control" placeholder="Login" autofocus="" required>
                        <br />
                        <label>Senha</label>
                        <input type="password" name="senha" id="senha" class="form-control" placeholder="Senha" required>
                       <br />
                        <input type="submit" class="btn btn-primary" id="btnLogar" value="Logar">
                        
                    </div>
                </div>
            </form>
        </div>
</div>

